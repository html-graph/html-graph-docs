:root{--color-edge:#777777;--color-node-border:#9e9e9e;--color-node-background:#daedbd;--color-node-background-hover:#caed95;--color-node-background-focus:#b6e86d;--color-text:#02020a;--color-background-2:#ededed;--color-background-3:#fff;--color-edge-2:#9b9303}html,body{height:100%;padding:0;margin:0}body{position:relative;color:var(--color-text)}button,input[type=range]{cursor:pointer}.canvas,.canvas-wrapper,.background{position:absolute;inset:0;overflow:hidden}.canvas{z-index:0}.overlay{position:absolute;top:2rem;left:2rem;right:2rem;border-radius:1rem;padding:1rem;background:var(--color-background-2);box-shadow:0 0 5px var(--color-node-border);z-index:1}